<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Panaderia Web</display-name>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>PedidoServlet</servlet-name>
        <servlet-class>com.panaderia.controllers.PedidoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PedidoServlet</servlet-name>
        <url-pattern>/api/pedido</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ProductoServlet</servlet-name>
        <servlet-class>com.panaderia.controllers.ProductoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductoServlet</servlet-name>
        <url-pattern>/api/producto/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PagoServlet</servlet-name>
        <servlet-class>com.panaderia.controllers.PagoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PagoServlet</servlet-name>
        <url-pattern>/api/pago</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>OpinionServlet</servlet-name>
        <servlet-class>com.panaderia.controllers.OpinionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OpinionServlet</servlet-name>
        <url-pattern>/api/opinion</url-pattern>
    </servlet-mapping>

</web-app>
